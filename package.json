{
  "name": "question_book_api",
  "version": "1.0.0",
  "description": "An api to access question papers of university",
  "main": "dist/server.js",
  "scripts": {
    "start": "node .",
    "build": "rimraf ./dist && tsc -p tsconfig.build.json",
    "test": "jest",
    "start:dev": "rimraf ./dist && tsc-watch -p tsconfig.build.json --onSuccess \"nodemon --inspect=0.0.0.0 ./dist/main.js\"",
    "lint": "eslint --ext .ts src/",
    "format": "prettier --write src/**/*.ts",
    "check-formatting": "prettier --check src/**/*.ts",
    "test-cov": "jest --coverage"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "tsc-watch": "^5.0.3",
    "typescript": "4.8.x"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "coverageDirectory": "../coverage",
    "coverageProvider": "v8",
    "rootDir": "./src",
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/debasishbsws/question-book.git"
  },
  "author": "debasishbsws",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/debasishbsws/question-book/issues"
  },
  "homepage": "https://github.com/debasishbsws/question-book#readme"
}
